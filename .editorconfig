# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{cpp,hpp,c,h,in,inc,asm}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Matches .travis.yml
[{.travis.yml}]
indent_style = space
indent_size = 2

